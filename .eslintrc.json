{
  "extends": [
    "airbnb",
    "prettier/react"
  ],
  "plugins": [
    "prettier"
  ],
  "env": {
    "browser": true,
    "jasmine": true,
    "node": true,
    "es6": true,
    "and" : true,
    "mocha" : true,
    "jest" : true
  },
  "rules": {
    "react/jsx-filename-extension": [1, {"extensions": [".js"]}],
    "prettier/prettier": ["error", { "singleQuote": true }]
  },
    "globals": {
    "jQuery": true,
    "$": true,
    "Dojo": true,
    "RequireJS": true,
    "Node.js": true,
    "Meteor" : true, 
    "es6" : true

  }
}